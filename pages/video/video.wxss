/* pages/video/video.wxss */
.container{
 overflow: hidden;
}
/* 视频播放 */
.video_play{
width: 100%;
height: 40%;
}

  #myVideo{
    width: 100%;
  }
  /* 弹幕 */
  .danmu{
    display: flex;
    height: 70rpx;
    overflow: hidden;
    align-items: center;

  }
  .inputDanmu{
    width: 80%;
    border:1px solid #ccc;
  }

  .danmuBt{
    display: block;
    width: 20%;
    height: 95%;
    margin: 5rpx;
    font-size: 30rpx;
    background: #da7c0c;
  }

/* 标签页 */
.video_info{
 width: 100%;
 height: 60%;
}
  /* 标签栏 */
  .swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #777;
    text-align: center;
    line-height: 80rpx;
  }

  .swiper-tab-list{
  font-size: 30rpx;
    display: inline-block;
    width: 33.33%;
    color: #777;
  }
  .on {
    color: #da7c0c;
    border-bottom: 5rpx solid #da7c0c;
  }
  .swiper-box{
  display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
  }

  .swiper-box view {
    text-align: center;
  }


  /* 课程详情 */
  .meta{
    display: flex;
    flex-direction: column;
    /*使内容位于容器中心  */
    /* align-items: center; */
    padding: 50rpx 40rpx;
  }

  .title{
    width: 100%;
    font-size: 16px;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
    text-align: left;
  }

  .summary{
    width: 80%;
    margin: 30rpx auto;
  }
  .subTitle{
    color: #666;
    width: 100%;
    font-size: 28rpx;
    margin: 20rpx;
  }

  .content{
    height:100%;
  }
  /*目录信息  */
  
  .movie-item{
  height: 85%;
  width: 100%;
  margin: 5rpx;
  border: 2rpx solid #ccc;
  } 

  .info{
    font-size: 14px;
    color: #888;
    margin-left: 10px;
    margin-top: 30rpx;
  }