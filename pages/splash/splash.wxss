/* pages/splash/splash.wxss */
.container{
  background-color: #f2f2f2;
}
.swiper_box{
  width: 100%;
  height: 100%;
  position:absolute;
}
.swiper_box image{
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden; 
}
.start{
  /*绝对定位  */
  position: absolute;
  bottom: 80px;
  left: 30%;
  width: 150px;
  /*带透明度的颜色  rgba  */
  background-color: rgba(50, 70, 90, 0.4);
  /*字体颜色  */
  color: white;
  /*边框  */
  border: 1px soild #35495e;
  /*字体大小  */
  font-size: 20px;
}