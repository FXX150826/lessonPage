    padding-top:40px;
    text-align: center;
}
#header .content image{
    width:100px;
    height:100px;
    border-radius: 100px;
}
#header .content .nickname{
    padding-top:20px;
}
#header .content .orther{
    padding-top:10px;
    font-size:15px;
    
}
